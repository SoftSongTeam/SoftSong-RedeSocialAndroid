<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:elevation="8dp"
                android:minHeight="220dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/Card2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="340dp"
                        android:elevation="8dp"
                        app:cardElevation="10dp">


                        <RelativeLayout
                            android:id="@+id/relativeUsu1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true">

                            <TextView
                                android:id="@+id/descric"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="60dp"
                                android:layout_marginRight="30dp"
                                android:text="perrellaf: Descriçao de uma publicaçao qualquer enois" />

                            <ImageView
                                android:id="@+id/likepic"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="6dp"
                                app:srcCompat="@drawable/like" />

                            <ImageView
                                android:id="@+id/commentpic"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="80dp"
                                android:layout_marginTop="6dp"
                                app:srcCompat="@drawable/comment" />

                            <TextView
                                android:id="@+id/nlike"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="60dp"
                                android:layout_marginTop="17dp"
                                android:layout_height="wrap_content"
                                android:text="0" />

                            <me.relex.circleindicator.CircleIndicator
                                android:id="@+id/indicator"
                                android:layout_width="140dp"
                                android:layout_height="35dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginVertical="10dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginRight="10dp"
                                app:ci_drawable="@drawable/item_swipe" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v4.view.ViewPager
                        android:id="@+id/pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="120dp" />


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:elevation="8dp"
                        app:cardElevation="10dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/Card1">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/gradient"
                            android:id="@+id/relativeUsu">

                <TextView
                    android:id="@+id/nameee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="6dp"
                    android:text="Felipe Perrella"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/horarior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="32dp"
                    android:text="12:30" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>