<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|top">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView5"
            android:layout_marginTop="16dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:id="@+id/scrollView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="570dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="470dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="#ffffff">


                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp"
                    app:cardElevation="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/Card1">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/relativeUsu">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView6"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/dash_usu"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update User"
                            android:id="@+id/textView3"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="170dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:textSize="20dp" />

                    </RelativeLayout>



                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp"
                    app:cardElevation="10dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/view4">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/relativeLogout">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:id="@+id/imageView9"
                            android:layout_marginLeft="27dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/ico_exit"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logout"
                            android:id="@+id/textView6"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="170dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:textSize="20dp" />

                    </RelativeLayout>



                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp"
                    app:cardElevation="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:id="@+id/view1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/relativeConfigs">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:id="@+id/imageView7"
                            android:layout_marginLeft="27dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/ico_config"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Configs"
                            android:id="@+id/textView4"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="170dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:textSize="20dp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp"
                    app:cardElevation="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="250dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:id="@+id/view3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/relativeNotifications">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:id="@+id/imageView8"
                            android:layout_marginLeft="27dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/ico_notification"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notifications"
                            android:id="@+id/textView5"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="170dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:textSize="20dp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </RelativeLayout>
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="feliperrella"
            android:layout_marginLeft="25dp"
            android:id="@+id/usu"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignParentStart="true"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="felipe.perrella2210@gmail.com"
            android:textColor="#ffffff"
            android:id="@+id/email"
            android:layout_below="@+id/usu"
            android:layout_alignStart="@+id/usu" />

    </RelativeLayout>

</FrameLayout>